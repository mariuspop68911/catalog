<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/abs_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    card_view:cardCornerRadius="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="false"
    card_view:cardBackgroundColor="@color/green_warm"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/inAsteptare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/in_asteptare"
            android:textSize="10sp"
            android:gravity="start"
            android:textColor="@color/input_login_hint"
            android:layout_below="@+id/absentaText"/>

        <TextView
            android:id="@+id/absentaText"
            android:layout_width="match_parent"
            android:text="Absenta nemotivata"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dataAbsenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23 apr 2018"
            android:textSize="10sp"
            android:gravity="end"
            android:textColor="@color/input_login_hint"
            android:layout_below="@+id/absentaText"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>